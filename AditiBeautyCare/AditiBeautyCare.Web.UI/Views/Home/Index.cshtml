@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @*<link rel="stylesheet" href="/css/Style.css" class="stylesheet">*@
    <style>
        .bg {
            background-image: url("/Image/HomePageImage.jpg");
            height: 750px;
            position: relative;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .text {
            text-align: center;
            padding: 20px 0 0 5px;
            margin-top: 0px;
            width: 350px;
            color: #111;
            background: transparent;
            background-color: rgba(255, 255, 255, .2);
            transform: translate(15%, 80%);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div style="margin:0 0 0 0; padding: 0 0 0 0;">
            <div class="bg">
                <div class="text">
                    <h1 class="font_4" style="text-align:center; line-height:1.0em; font-size:60px;"><span class="color_15">Aditi Beauty Care at Your Service</span></h1>
                    <h3>LET US PAMPER YOU</h3>
                    <a href="#" class="btn btn-secondary" style="color: white; background-color: #102c44">Book Service</a>
                </div>
            </div>
        </div>
        <div id="getintouch">
            @Html.Partial("_GetInTouch")
        </div>

        <div map style="align-content:center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d57559.58828697803!2d85.01170620744057!3d25.622380427099685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39ed565f7ecb04eb%3A0xfeac56c8e4af9bc7!2sDanapur%2C%20Bihar!5e0!3m2!1sen!2sin!4v1642024532690!5m2!1sen!2sin" width="100%" height="500" style="border:none;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <br />
        <br />
    </div>
</body>
</html>