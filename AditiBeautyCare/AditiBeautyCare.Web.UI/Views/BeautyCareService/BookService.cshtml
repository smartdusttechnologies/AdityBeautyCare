@model AditiBeautyCare.Web.UI.Models.BeautyCareService.BeautyCareServiceBookingModel

    @{
        ViewData["Title"] = "Services";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css"
          rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js" integrity="sha512-AIOTidJAcHBH2G/oZv9viEGXRqDNmfdPVPYOYKGy3fti0xIplnlgMHUGfuNRzC6FkzIo0iIxgFnr9RikFxK+sw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function validateBookingSlot() {
            start = document.getElementById("from").value; //to update time value in each input bar
            end = document.getElementById("To").value; //to update time value in each input bar

            start = start.split(":");
            end = end.split(":");
            var startDate = new Date(0, 0, 0, start[0], start[1], 0);
            var endDate = new Date(0, 0, 0, end[0], end[1], 0);
            var diff = endDate.getTime() - startDate.getTime();
            var hours = Math.floor(diff / 1000 / 60 / 60);
            if (hours < 0)
                alert("Booking time slot TO should be later than From");
        }
    </script>
    <style>
        .form-group > label {
            top: 12px;
            left: 6px;
            position: relative;
            background-color: white;
            padding: 0px 0px 0px 0px;
        }
    </style>
    <script></script>

</head>
<body>
    <div class="container mt-5">
        <H2>Service Booking  :  @Model.ServiceName </H2>

        <form _lpchecked="1" asp-controller="BeautyCareService" asp-action="BookService">
            <input type="hidden" asp-for="ServiceId" id="ServiceId" name="ServiceId" />
            <div class="form-group">
                <label for="Date">Booking Date</label>
                <input type="date" id="Date" class="form-control" asp-for="Date" >
            </div>
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="time" id="from" asp-for="From" class="form-control"  onchange="validateBookingSlot()" required />
                        <label class="form-label" for="from"  style="margin-left: 0px;">From*</label>
                        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 68.8px;"></div><div class="form-notch-trailing"></div></div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input type="time" id="To" asp-for="To" class="form-control" onchange="validateBookingSlot()" required />
                        <label class="form-label" for="To" style="margin-left: 0px;">TO*</label>
                        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 67.2px;"></div><div class="form-notch-trailing"></div></div>
                    </div>
                </div>
            </div>
            <div class="form-outline mb-4">
                <input type="text" id="UserName" asp-for="UserName" class="form-control" required />
                <label class="form-label" for="UserName" style="margin-left: 0px;">Name*</label>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 39.2px;"></div><div class="form-notch-trailing"></div></div>
            </div>
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" id="UserEmail" asp-for="UserEmail" class="form-control" />
                <label class="form-label" for="UserEmail" style="margin-left: 0px;">Email</label>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 39.2px;"></div><div class="form-notch-trailing"></div></div>
            </div>
            <!-- Number input -->
            <div class="form-outline mb-4">

                <input type="tel" id="UserMobileNumber" asp-for="UserMobileNumber" placeholder="10 digit mobile no." class="form-control" maxlength="10" required>

                <label class="form-label" for="UserMobileNumber" style="margin-left: 0px; ">Phone*</label>

                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 44.8px;"></div><div class="form-notch-trailing"></div></div>

            </div>
            <span asp-validation-for="UserMobileNumber" class="text-danger"></span>

            <!-- Message input -->
            <div class="form-outline mb-4">
                <textarea class="form-control" id="Description" asp-for="Description" rows="4"></textarea>
                <label class="form-label" for="Description" style="margin-left: 0px;">Additional information</label>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 134.4px;"></div><div class="form-notch-trailing"></div></div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-lg btn-dark mt-2 text-white"  style="background-color: #102c44;">Book Service</button>
            <a asp-action="Index" class="btn btn-lg btn-dark mt-2 text-white" style="background-color: #102c44;">Back to List</a>

        </form>
        

      


    </div><br />
    <br />

    
</body>

</html>