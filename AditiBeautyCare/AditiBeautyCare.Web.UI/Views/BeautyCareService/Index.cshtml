@model IEnumerable<AditiBeautyCare.Web.UI.Models.BeautyCareService.BeautyCareServiceModel>
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css"
          rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>


<style>
    body {
    font-family: 'Times New Roman';
}
</style>

</head>

<body>
<div class="text-center mt-4">
   
    <h1> OUR SERVICES </h1>
  
</div>


<div class="container mt-5">
    <div class="row">

           @foreach (var services in Model)
                {

        <div class="col-sm-4">
            <div class="container mt-3">
                <div class="card">
                    <img src="~/Image/@services.ImageUrl" alt="@services.Description">
                    <div class="m-3">
                        <h3 hidden>Service ID:@services.Id</h3>
                        <h3>Service Name:@services.ServiceName</h3>
                        <h5>Duration:@services.ServiceDuration</h5>
                        <h5>Price: @services.ServicePrice</h5>
                     @*   <a asp-controller="BeautyCareService" asp-action="Book"  asp-route-id="@services.ServiceId">aaaaaaaaaaaa</a>*@
                        <a  class="btn btn-lg  mt-2 text-white" asp-action="BookService" asp-route-id="@services.Id" style="background-color: #102c44;" >
                            Book Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
       
    </div>
</div>




</body>