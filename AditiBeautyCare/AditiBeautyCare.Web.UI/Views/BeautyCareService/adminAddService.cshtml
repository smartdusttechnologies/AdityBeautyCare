@model AditiBeautyCare.Web.UI.Models.BeautyCareService.BeautyCareServiceModel

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <style>
    </style>
</head>

<body>
    <div class="container">
        <h2 style="align-items:center; color:lightslategray">Add New Service</h2><br />
        <div class="row">
            <div class="col-md-4">

                <form asp-controller="BeautyCareService" asp-action="adminAddService" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" id="Id" name="Id" />
                    <div>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" id="Name" class="form-control" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Description" style="margin-left: 0px;">Description*</label>
                        <input type="text" id="Description" asp-for="Description" class="form-control" />
                        <div class="form-notch">
                            <div class="form-notch-leading" style="width: 9px;"></div>
                            <div class="form-notch-middle" style="width: 39.2px;"></div>
                            <div class="form-notch-trailing"></div><span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-outline mb-4">

                        <label class="form-label" for="Price" style="margin-left: 0px;">Price (In Rupee)</label>
                        <input type="number" id="Price" asp-for="Price" class="form-control" />
                        <div class="form-notch">
                            <div class="form-notch-leading" style="width: 9px;"></div>
                            <div class="form-notch-middle" style="width: 39.2px;"></div>
                            <div class="form-notch-trailing"></div>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Duration" style="margin-left: 0px; ">Duration* (In Minutes)</label>
                        <input type="number" id="Duration" asp-for="Duration" placeholder="fill duration." class="form-control">
                        <div class="form-notch">
                            <div class="form-notch-leading" style="width: 9px;"></div>
                            <div class="form-notch-middle" style="width: 44.8px;"></div>
                            <div class="form-notch-trailing"></div>
                        </div>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="ImageUrl" style="margin-left: 0px; ">ImageUrl*</label>
                        <input type="file" asp-for="ImageUrl" placeholder="Select File" class="form-control">
                        <div class="form-notch">
                            <div class="form-notch-leading" style="width: 9px;"></div>
                            <div class="form-notch-middle" style="width: 44.8px;"></div>
                            <div class="form-notch-trailing"></div>
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-lg btn-dark mt-2 text-white" o style="background-color: #102c44;">Add Service</button>
                    <a asp-action="Index" class="btn btn-lg btn-dark mt-2 text-white" style="background-color: #102c44;">Back to List</a>
                </form>

                <br />
                <br />
            </div>
        </div>
    </div>

    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    <br />

</body>
</html>
